                </LinearLayout>
                <LinearLayout android:gravity="center" android:background="@color/sec_widget_round_and_bgcolor" android:paddingTop="@dimen/reset_button_top_margin" android:paddingBottom="@dimen/reset_button_bottom_margin" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content">
