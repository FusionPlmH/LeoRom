<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/language_keyboard_settings_title" android:key="language_and_input_settings_screen"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
    <SecPreference android:title="@string/phone_language" android:key="phone_language" android:fragment="com.android.settings.localepicker.LocaleListEditor" />
    <SecPreference android:title="@string/current_input_method" android:key="current_input_method" />
    <SecPreferenceCategory android:title="@string/keyboard_and_input_methods_category" android:key="keyboards_category">
        <SecPreference android:title="@string/virtual_keyboard_category" android:key="virtual_keyboard_pref" android:fragment="com.android.settings.inputmethod.VirtualKeyboardFragment" />
        <SecPreference android:title="@string/physical_keyboard_title" android:key="physical_keyboard_pref" android:summary="@string/summary_placeholder" android:fragment="com.samsung.android.settings.inputmethod.PhysicalKeyboardFragment" />
        <SecSwitchPreference android:persistent="false" android:title="@string/show_keyboard_button_title" android:key="key_show_keyboard_button" android:summary="@string/show_keyboard_button_summary" />
    </SecPreferenceCategory>
    <SecPreferenceCategory android:title="@string/input_assistance" android:key="input_assistance_category">
        <SecPreference android:persistent="false" android:title="@string/spellcheckers_settings_title" android:key="spellcheckers_settings" android:fragment="com.android.settings.inputmethod.SpellCheckersSettings" />
        <com.samsung.android.settings.widget.SecGearPreference android:title="@string/autofill_app" android:key="default_autofill" android:fragment="com.android.settings.applications.defaultapps.DefaultAutofillPicker" settings:keywords="@string/autofill_keywords" />
        <SecPreference android:title="@string/user_dict_settings_title" android:key="key_user_dictionary_settings" />
    </SecPreferenceCategory>
    <SecPreferenceCategory android:title="@string/voice_category" android:key="voice_category">
        <SecPreference android:title="@string/tts_settings_title" android:key="tts_settings_summary" android:fragment="com.android.settings.tts.TextToSpeechSettings" />
    </SecPreferenceCategory>
    <SecPreferenceCategory android:title="@string/pointer_settings_category" android:key="pointer_settings_category">
        <com.android.settings.PointerSpeedPreference android:title="@string/pointer_speed" android:key="pointer_speed" android:dialogTitle="@string/pointer_speed" />
        <SecDropDownPreference android:title="@string/primary_mouse_button_title" android:key="key_primary_mouse_button" />
    </SecPreferenceCategory>
    <com.samsung.android.settings.widget.SecInsetCategoryPreference />
    <SwitchPreference android:title="@string/vibrate_input_devices" android:key="vibrate_input_devices" android:summary="@string/vibrate_input_devices_summary" settings:controller="com.android.settings.inputmethod.GameControllerPreferenceController" />
</PreferenceScreen>