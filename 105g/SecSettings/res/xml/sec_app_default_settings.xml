<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/app_default_dashboard_title" android:key="app_default_settings_screen"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
    <SecPreference android:title="@string/default_browser_title" android:key="default_browser" android:fragment="com.android.settings.applications.defaultapps.DefaultBrowserPicker" settings:keywords="@string/keywords_default_browser">
        <extra android:name="for_work" android:value="false" />
    </SecPreference>
    <SecPreference android:title="@string/default_phone_title" android:key="default_phone_app" android:fragment="com.android.settings.applications.defaultapps.DefaultPhonePicker" settings:keywords="@string/keywords_default_phone_app" />
    <SecPreference android:title="@string/default_emergency_app" android:key="default_emergency_app" settings:keywords="@string/keywords_emergency_app" />
    <SecPreference android:title="@string/sms_application_title" android:key="default_sms_app" android:fragment="com.android.settings.applications.defaultapps.DefaultSmsPicker" settings:keywords="@string/keywords_more_default_sms_app" />
    <SecPreference android:title="@string/nfc_payment_settings_title" android:key="default_payment_app" android:summary="@string/summary_placeholder" android:fragment="com.samsung.android.settings.nfc.PaymentSettings" settings:keywords="@string/keywords_default_payment_app" />
    <com.android.settings.widget.WorkOnlyCategory android:title="@string/default_for_work" android:key="work_defaults">
        <SecPreference android:title="@string/default_browser_title" android:key="work_default_browser" android:fragment="com.android.settings.applications.defaultapps.DefaultBrowserPicker">
            <extra android:name="for_work" android:value="true" />
        </SecPreference>
        <SecPreference android:title="@string/default_phone_title" android:key="work_default_phone_app" android:fragment="com.android.settings.applications.defaultapps.DefaultPhonePicker" settings:keywords="@string/keywords_default_phone_app">
            <extra android:name="for_work" android:value="true" />
        </SecPreference>
    </com.android.settings.widget.WorkOnlyCategory>
    <SecPreference android:title="@string/home_app" android:key="default_home" android:fragment="com.android.settings.applications.defaultapps.DefaultHomePicker" settings:keywords="@string/keywords_home" />
    <SecPreference android:persistent="false" android:title="@string/home_app" android:key="home_dcm" android:fragment="com.samsung.android.settings.DCMHomeSettings" />
    <SecPreference android:title="@string/assist_and_voice_input_title" android:key="assist_and_voice_input" android:fragment="com.android.settings.applications.assist.ManageAssist" settings:keywords="@string/keywords_assist_input" />
    <SecDropDownPreference android:entries="@array/default_app_selection_entry" android:title="@string/sec_default_app_selection" android:selectable="true" android:key="default_app_selection" android:entryValues="@array/default_app_selection_value" />
    <SecPreference android:title="@string/sec_default_app_title" android:key="domain_urls" android:fragment="com.android.settings.applications.ManageDomainUrls" settings:keywords="@string/keywords_default_links" />
</PreferenceScreen>